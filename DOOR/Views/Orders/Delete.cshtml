@model DOOR.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1 {
        color: #343a40;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        color: #dc3545;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    dl.row {
        margin: 0;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: #007bff;
        padding: 10px 0;
        width: 30%; 
        float: left; 
        clear: left; 
    }

    dd.col-sm-10 {
        padding: 10px 0;
        color: #343a40;
        border-bottom: 1px solid #e9ecef;
        width: 70%;
        float: left; 
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

  
    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }
</style>

<h1>Удаление</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="delete-container">
    <h4 style="font-size: 24px; color: #000;">Заказы</h4>
    
    <dl class="row clearfix">
        
        <dt class="col-sm-2">
            <th>Дата заказа</th>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt class="col-sm-2">
            <th>Имя заказчика</th>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt class="col-sm-2">
            <th>Контактные данные</th>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerContactInfo)
        </dd>
        <dt class="col-sm-2">
            <th>Личные предпочтения</th>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalProperties)
        </dd>
        
        <dt class="col-sm-2">
            <th>Модель</th>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Door.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="btn-container">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-back">Вернуться назад</a>
        </div>
    </form>
</div>