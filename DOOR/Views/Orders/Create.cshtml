@model DOOR.Models.Order
@{
    ViewData["Title"] = "Create";
}

<style>
   
    h1 {
        color: #343a40;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    
    h4 {
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }

    
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    
    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #007bff;
        display: block;
        margin-bottom: 5px;
    }

    nput.form-control,
    select.form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        input.form-control:focus,
        select.form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
</style>

<h1>Создание</h1>



<div class="form-container">

    <h4 style="font-size: 24px; color: #000;">Заказы</h4>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        
        <div class="form-group">
            <th>Дата заказа</th>
            <input asp-for="OrderDate" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <th>Имя заказчика</th>
            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <th>Контактные данные</th>
            <input asp-for="CustomerContactInfo" class="form-control" />
            <span asp-validation-for="CustomerContactInfo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <th>Личные предпочтения</th>
            <input asp-for="AdditionalProperties" class="form-control" />
            <span asp-validation-for="AdditionalProperties" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <th>Модель</th>
            <select asp-for="DoorId" class="form-control" asp-items="ViewBag.DoorId"></select>
            <span asp-validation-for="DoorId" class="text-danger"></span>
        </div>

        
        <div class="btn-container">
            <input type="submit" value="Создать" class="btn btn-primary" />
            <a asp-action="Index" class="btn-back">Вернуться назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}