@model DOOR.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}

<style>
    
    h1 {
        color: #343a40;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }


    h3 {
        color: #dc3545;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }
    
    .data-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

 
    dt {
        font-weight: bold;
        color: #007bff;
    }

    dd {
        margin-left: 0;
        color: #343a40;
    }


    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bd2130;
            border-color: #b02a37;
        }

   
    .btn-back {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<h1>Удаление</h1>

<h3>Вы уверены, что хотите это удалить??</h3>

<div class="data-container">
    <h4 style="font-size: 24px; color: #000;">Поставщики</h4>
   
    <dl class="row">
        
        <dt class="col-sm-3">
            <th>Имя</th>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

  
        <dt class="col-sm-3">
            <th>Адрес</th>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-3">
            <th>Номер телефона</th>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
    </dl>

   
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        
        <div class="btn-container">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn-back">Вернуться назад</a>
        </div>
    </form>
</div>
