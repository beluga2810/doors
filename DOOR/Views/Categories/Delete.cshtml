@model DOOR.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Стили для заголовка */
    h1 {
        color: #343a40;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Стили для подзаголовка */
    h3 {
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Стили для контейнера данных */
    .data-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Стили для описания свойств */
    dt {
        font-weight: bold;
        color: #007bff;
    }

    dd {
        margin-left: 0;
        color: #343a40;
    }

    /* Контейнер для кнопок */
    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    /* Стиль для кнопки "Delete" */
    .btn-danger {
        background-color: #dc3545; /* Красный цвет */
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bd2130; /* Темнее при наведении */
            border-color: #b02a37;
        }

    /* Стиль для кнопки "Back to List" */
    .btn-back {
        background-color: #343a40; /* Темно-серый цвет */
        border-color: #343a40;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #23272b; /* Темнее при наведении */
            border-color: #1d2124;
        }

    /* Стили для разделителя */
    hr {
        border-top: 1px solid #dee2e6;
        margin: 20px 0;
    }
</style>

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div class="data-container">
    <h4 style="font-size: 24px;">Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <!-- Контейнер для кнопок -->
    <div class="btn-container">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn-back">Back to List</a>
    </div>
</div>