@model DOOR.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Стили для заголовка */
    h1 {
        color: #343a40;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Стили для подзаголовка */
    h4 {
        color: #6c757d;
        font-size: 1.2rem;
        font-weight: normal;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Стили для формы */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Стили для полей ввода */
    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #007bff;
        display: block;
        margin-bottom: 5px;
    }

    input.form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        input.form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Стили для кнопок */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    /* Стиль для кнопки "Back to List" */
    .btn-back {
        background-color: #343a40; /* Темно-серый цвет */
        border-color: #343a40;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
    }

        .btn-back:hover {
            background-color: #23272b; /* Темнее при наведении */
            border-color: #1d2124;
        }

    /* Контейнер для кнопок */
    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    /* Стили для сообщений об ошибках */
    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

<h1>Edit</h1>

<hr />

<div class="form-container">
    <h4 style="font-size: 24px;">Category</h4>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Контейнер для кнопок -->
        <div class="btn-container">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn-back">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
