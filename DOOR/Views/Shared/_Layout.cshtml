@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DOOR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DOOR.styles.css" asp-append-version="true" />
</head>
<body>
    @if (ViewData["HideHeader"] as bool? != true)
    {
        <header>
            
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="text-white-50 navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Главная страница</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Doors" asp-action="Index">Учёт дверей</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Services" asp-action="Index">Отгрузки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Categories" asp-action="Index">Категории дверей</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Departments" asp-action="Index">Точки продаж</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Employees" asp-action="Index">Сотрудники</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Orders" asp-action="Index">Заказы</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Suppliers" asp-action="Index">Поставщики</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Customers" asp-action="Index">Заказчики</a>
                                </li>

                            </ul>
                            <ul class="navbar-nav ms-auto">
                                @if (Context.Session.GetString("Username") == null)
                                {
                                    <li class="nav-item login-button">
                                        <a class="btn btn-primary btn-sm d-block" asp-controller="Auth" asp-action="Login">Войти</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item login-button">
                                        <a class="btn btn-success btn-sm d-block" asp-controller="Auth" asp-action="Logout">Выйти</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            
        </header>
    }

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="text-align: center;">
        <div class="container">
            &copy; 2025 - АСОИ  по продаже дверей -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a> -
            <a href="https://github.com/beluga2810" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-github"></i> GitHub
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .login-button .btn {
        padding: 10px 20px;
        font-size: 0.9rem;
        margin-top: 4px;
        margin-bottom: 20px;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .login-button .btn:hover {
            text-decoration: none;
            background-color: #0069d9 !important; 
        }

        .login-button .btn.btn-success:hover {
            background-color: #0069d9 !important; 
        }

</style>